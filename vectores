#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100
using namespace std;
void cargarvector (double a[], int tam);
void mostrarvector (double a[], int tam);
double promedio (double a[], int tam);
void main ()
{double S [MAX];
 int N;
 double prom;
 do {
     cout<<"Ingrese NÂ° de elementos del vector";
     cin>> N;
    } while (N>MAX||N<=0);
      cargarvector (S,N);
      prom = promedio (S,N);
    for (int i=0; i<N; i++)
     cout<<"Dif"<<i<<"i"<<S[i]-prom;
    mostrarvector (S,N);
    cout<<prom;
    getch();
}
void cargarvector(double a[], int tam)
{
    for(int i=0; i<tam; i++)
    {
        cout<<"vector["<<i<<"]";
        cin>>a[i];
    }
}
void mostrarvector(double a[], int tam)
{
    for (int i=0; i<tam; i++)
    {
        cout<<"vector["<<i<<"]="<<a[i]<<endl;
    }
}
double promedio(double a[], int tam)
{
    double suma=0;
    for(int i=0; i<tam; i++)
    {suma = a[i];
    return suma/tam;
    }
}
